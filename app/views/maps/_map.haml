.row
  .six.columns
    %h4= map.name
    = mkd map.desc
  .six.columns.resource-actions
    - if @project.mappable_by?(current_user)
      = link_to 'New Resource', new_project_map_resource_path(@project, map), :class => 'small white nice button radius'
    - if @project.mappable_by?(current_user)
      = link_to 'New Image', new_project_map_map_image_path(@project, map), :class => 'small white nice button radius'
    - if can? :update, map
      = link_to 'Edit', edit_project_map_path(@project, map), :class => 'small white nice button radius'
    - if can? :destroy, map
      = link_to 'Destroy', project_map_path(@project, map), :confirm => 'Are you sure?', :method => :delete, :class => 'small white nice button radius alert'
