= simple_form_for([@project, @map]) do |f|
  -if notice
    .notice_div
      = notice
      = link_to "Back to maps list.", project_maps_path(@project)
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :lump, :placeholder => @project.game.default_lumpname
    = f.input :desc

  .form-actions
    = link_to "new wadfile", new_project_map_map_wadfile_path(@project, @map) unless @map.new_record?
    = f.button :submit
