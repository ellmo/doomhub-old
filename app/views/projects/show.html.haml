%p#notice= notice

%dl.nice.contained.tabs
  %dd= link_to 'Overwiew', '#overview', :class => 'active'
  %dd= link_to 'Maps', '#maps'
  %dd= link_to 'Resources', '#resources'

%ul.nice.contained.tabs-content
  %li.panel.project-overview.active#overviewTab
    = render @project
  %li.panel.project-maps#mapsTab
    .row
      .nine.columns
        - @project.maps.each do |map|
          = link_to map.name, [@project, map]
      .three.columns.resource-actions
        - if can? :update, @project
          = link_to 'New Map', new_project_map_path(@project), :class => 'small white nice button radius'
  %li.panel.project-resources#resourcesTab
    %p coming soon